<!DOCTYPE html>
<html>

<head>
    <title>Student</title>
    <link rel="stylesheet" type="text/css" href="style.css">
</head>

<body>
    <div id="menu">
        <a href="subjects">Subject</a>
        <a href="teachers">Teacher</a>
        <a href="students">Student</a>
    </div>
    <div id="main-table">
        <h2>
            Students Data
        </h2>
        <table style="width:100%">
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Add Subject</th>
                <th colspan="2">Action</th>
            </tr>
            <% dataRowStudent.forEach(function(row){%>
                <tr>
                    <td>
                        <%=row.id %>
                    </td>
                    <td>
                        <%=row.first_name %>
                    </td>
                    <td>
                        <%=row.last_name %>
                    </td>
                    <td>
                        <%=row.email %>
                    </td>
                    <td>
                        <a href="/students/<%=row.id%>/addsubject">Add Subject</a>
                    </td>
                    <td>
                        <a href="/students/edit/<%=row.id%>">Edit</a>
                    </td>
                    <td>
                        <a href="/students/delete/<%=row.id%>">Delete</a>
                    </td>
                </tr>
                <%})%>
        </table>

        <div id="menu-add">
            <a href="/students/add">Add Data Student</a>
        </div>
    </div>



</body>

</html>