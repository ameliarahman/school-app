<!DOCTYPE html>
<html>
<% include ../partials/head%>

    <body>
        <% include ../partials/menu%>
            <div id="main-table">
                <h2>
                    Students Data
                </h2>
                <table style="width:100%"> 
                    <tr>
                        <th>No</th>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Add Subject</th>
                        <th colspan="2">Action</th>
                    </tr>
                    <% dataRowStudent.forEach(function(row, index){%>
                        <tr>
                            <td>
                                <%=index+1 %>
                            </td>
                            <td>
                                <%=row.id %>
                            </td>
                            <td>
                                <%=row.first_name %>
                            </td>
                            <td>
                                <%=row.last_name %>
                            </td>
                            <td>
                                <%=row.email %>
                            </td>
                            <td>
                                <a href="/students/<%=row.id%>/addsubject">Add Subject</a>
                            </td>
                            <td>
                                <a href="/students/edit/<%=row.id%>">Edit</a>
                            </td>
                            <td>
                                <a href="/students/delete/<%=row.id%>">Delete</a>
                            </td>
                        </tr>
                        <%})%>
                </table>

            </div>



    </body>

</html>