<!DOCTYPE html>
<html>

<head>
    <title>Teacher</title>
    <link rel="stylesheet" type="text/css" href="style.css">
</head>

<body>
    <div id="menu">
        <a href="subjects">Subject</a>
        <a href="teachers">Teacher</a>
        <a href="students">Student</a>
    </div>
    <div id="main-table">
        <h2>
            Teacher Data
        </h2>
        <table style="width:100%">
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th colspan="2">Action</th>
            </tr>
            <% dataTeacher.forEach(function(row){%>
                <tr>
                    <td>
                        <%=row.id %>
                    </td>
                    <td>
                        <%=row.first_name %>
                    </td>
                    <td>
                        <%=row.last_name %>
                    </td>
                    <td>
                        <%=row.email %>
                    </td>
                    <%if(row.Subject){%>
                        <td>
                            <%=row.Subject.subject_name %>
                        </td>
                        <%}else{%>
                            <td>Unassigned</td>
                            <%}%>
                                <td>
                                    <a href="/teachers/edit/<%=row.id%>">Edit</a>
                                </td>
                                <td>
                                    <a href="/teachers/delete/<%=row.id%>">Delete</a>
                                </td>

                </tr>
                <%})%>
        </table>
        <div id="menu-add">
            <a href="/teachers/add">Add Data Teacher</a>
        </div>
    </div>



</body>

</html>