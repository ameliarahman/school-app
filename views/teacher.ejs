<!DOCTYPE html>
<html>

    <% include ../partials/head%>
<body>
    <% include ../partials/menu%>
        <div id="main-table">
            <h2>
                Teacher Data
            </h2>
            <table style="width:100%">
                <tr>
                    <th>No</th>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Subject</th>
                    <th colspan="2">Action</th>
                </tr>
                <% dataTeacher.forEach(function(row, index){%>
                    <tr>
                        <td>
                            <%=index+1%>
                        </td>
                        <td>
                            <%=row.id %>
                        </td>
                        <td>
                            <%=row.first_name %>
                        </td>
                        <td>
                            <%=row.last_name %>
                        </td>
                        <td>
                            <%=row.email %>
                        </td>
                        <%if(row.Subject){%>
                            <td>
                                <%=row.Subject.subject_name %>
                            </td>
                            <%}else{%>
                                <td>Unassigned</td>
                                <%}%>
                                    <td>
                                        <a href="/teachers/edit/<%=row.id%>">Edit</a>
                                    </td>
                                    <td>
                                        <a href="/teachers/delete/<%=row.id%>">Delete</a>
                                    </td>

                    </tr>
                    <%})%>
            </table>
            <div id="menu-add">
                <a href="/teachers/add">Add Data Teacher</a>
            </div>
        </div>



</body>

</html>